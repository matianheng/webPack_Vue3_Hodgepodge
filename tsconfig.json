{    "include": [
    "./**/*"
],
"exclude": [
    "node_modules",
    "**/node_modules/*"
],
    "compilerOptions":{
        "noImplicitAny":false,
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "strictNullChecks": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "lib": [
            "es2017",
            "es2016",
            "dom"
        ]
    }
}
 